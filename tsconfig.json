{
    "compilerOptions": {
        "outDir": "dist/",
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}
